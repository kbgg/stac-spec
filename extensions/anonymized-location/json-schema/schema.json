{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema.json#",
  "title": "Anonymized Location Extension",
  "description": "STAC Anonymized Location Extension to STAC Items or STAC Collections.",
  "oneOf": [
    {
      "allOf": [
        {
          "$ref": "../../../item-spec/json-schema/item.json"
        },
        {
          "$ref": "#/definitions/stac_extensions"
        },
        {
          "type": "object",
          "required": [
            "properties"
          ],
          "properties": {
            "properties": {
              "$ref": "#/definitions/anonymized-location"
            }
          }
        }
      ]
    },
    {
      "allOf": [
        {
          "$ref": "../../../collection-spec/json-schema/collection.json"
        },
        {
          "$ref": "#/definitions/stac_extensions"
        },
        {
          "$ref": "#/definitions/anonymized-location"
        }
      ]
    }
  ],
  "definitions": {
    "stac_extensions": {
      "type": "object",
      "required": [
        "stac_extensions"
      ],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "contains": {
            "const": "anon"
          }
        }
      }
    },
    "anon": {
      "type": "object",
      "anyOf": [
        {"required": ["anon:precision"]}
      ],
      "properties": {
        "anon:precision": {
          "type": "number",
          "title": "Bounding Box Precision"
        }
      }
    }
  }
}
